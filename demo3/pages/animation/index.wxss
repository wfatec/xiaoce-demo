.ranking-animate {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: #dddddd;
  overflow: hidden;
  z-index: 999;
}
.ranking-animate view,
.ranking-animate image {
  display: block;
}
.ranking-animate .contrl {
  height: 44rpx;
  width: 150rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  z-index: 999;
}
.ranking-animate .contrl .skip {
  position: absolute;
  right: 70rpx;
  box-sizing: border-box;
  width: 80rpx;
  height: 44rpx;
  font-size: 24rpx;
  line-height: 42rpx;
  color: #aaa;
  border: 1rpx solid #aaa;
  border-radius: 22rpx;
  text-align: center;
  transition: 1s;
}
.ranking-animate .contrl .skip.end {
  display: none;
}
.ranking-animate .contrl .music {
  width: 44rpx;
  height: 44rpx;
  float: right;
}
.ranking-animate .contrl.noMusic .skip {
  right: 0;
}
.ranking-animate .back {
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.ranking-animate .hero {
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
  z-index: 2;
}
.ranking-animate .boy {
  width: 480rpx;
  height: 480rpx;
  position: absolute;
  z-index: 99;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.ranking-animate .fog {
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0;
  transform: translateY(400rpx);
  z-index: 89;
}
.ranking-animate .fogL {
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0;
  transform: translateY(300rpx);
  z-index: 89;
}
.ranking-animate .bike {
  width: 100%;
  height: 600rpx;
  position: absolute;
  opacity: 0;
  top: 580rpx;
  z-index: 2;
}
.ranking-animate .tips {
  width: 400rpx;
  position: absolute;
  left: 50%;
  top: 120rpx;
  z-index: 99;
  transform: translateX(-50%);
  color: #fff;
  opacity: 0;
}
.ranking-animate .tips .item {
  text-align: center;
  font-size: 36rpx;
  line-height: 60rpx;
}
.ranking-animate .boyBikeWrap {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: 4;
}
.ranking-animate .boyBikeWrap .boyBike {
  width: 300rpx;
  height: 971rpx;
  margin: 0 auto;
  transform: translateY(420rpx);
  opacity: 0;
}
.ranking-animate .boyBikeWrap .boyHero {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
  transform: translateY(-400rpx);
  opacity: 0;
}
.ranking-animate .bigHero {
  height: 939rpx;
  width: 640rpx;
  position: absolute;
  bottom: 0;
  transform: translateX(-130rpx);
  z-index: 79;
  opacity: 0;
}
.ranking-animate .text {
  width: 100%;
  height: 600rpx;
  position: absolute;
  top: -30rpx;
  opacity: 0;
  z-index: 3;
}
.ranking-animate .endedImg {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 990;
  transition: 0.5s;
  opacity: 0;
}
.ranking-animate .endedImg.end {
  opacity: 1;
}
